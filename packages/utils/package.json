{
  "name": "hyezo",
  "version": "1.5.0",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --external react && tailwindcss -i ./src/ui/styles.css -o ./public/ui/styles.css",
    "dev": "concurrently \"tsup --external react\" \"tailwindcss -i ./src/ui/styles.css -o ./public/ui/styles.css --watch\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf public",
    "lint": "TIMING=1 eslint \"./* */*.ts*\"",
    "rel": "pnpm run build && node setup.js && cd public && pnpm publish --no-git-checks"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.11",
    "@hookform/resolvers": "^2.9.11",
    "cva": "npm:class-variance-authority@^0.4.0",
    "fuse.js": "^6.6.2",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "next": "^13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.1",
    "zod": "^3.20.6"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@heroicons/react": "^2.0.15",
    "@hyezo/tsconfig": "workspace:*",
    "@next/font": "13.1.5",
    "@types/js-cookie": "^3.0.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "eslint-config-hyezo": "workspace:*",
    "tailwind-config-hyezo": "workspace:*",
    "tailwind-merge": "^1.9.1",
    "tailwindcss": "3.2.4",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  }
}
